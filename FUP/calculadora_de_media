i = 0
while i < 10:
    nota = float(input('Qual a primeira nota do aluno? '))
    nota2 = float(input('Qual a segunda nota do aluno? '))
    
    if nota <= 10 and nota2 <=10:
        media = (nota+nota2)/2

        if media <= 4:
            print(f'Reprovado por média: {media}')

        elif media >= 4 and media < 7:
            print(f'AF por média: {media}')

        elif media >= 7:
            print(f'Aprovado por média: {media}')
    
    i += 1
